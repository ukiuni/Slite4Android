<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="com.ukiuni.slite"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".SliteApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">x

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".TopActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".ContentViewActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".ContentEditActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".AppendsUrlToContentActivity"
            android:theme="@style/TrangentTheme">
            <intent-filter
                android:label="@string/appends_url_to_content">
                <action android:name="android.intent.action.SEND"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="text/plain"/>
            </intent-filter>
        </activity>
    </application>

</manifest>
